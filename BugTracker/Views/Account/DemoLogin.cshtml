@model BugTracker.Models.RegisterViewModel

@{
    ViewBag.Title = "Demo Login";
}


<div style="margin-top:50px" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">Choose an option</div>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <a class="btn btn-default form-group-lg btn-lg btn-block" href="@Url.Action("DemoLogin","Account",new {role = "Admin" })">
                    Admin
                </a>
                <a class="btn btn-default btn-lg btn-block" href="@Url.Action("DemoLogin","Account",new { role = "Project Manager" })">
                    Project Manager
                </a>
                <a class="btn btn-default  btn-lg btn-block" href="@Url.Action("DemoLogin","Account",new { role = "Developer" })">
                    Developer
                </a>
                <a class="btn btn-default btn-lg btn-block" href="@Url.Action("DemoLogin","Account",new { role = "Submitter" })">
                    Submitter
                </a>
            </div>
        </div>
    </div>
</div>