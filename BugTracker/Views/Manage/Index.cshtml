@using BugTracker.Models
@model BugTracker.Models.IndexViewModel

@{
    ViewBag.Title = "Manage";
}


@Html.Partial("_NavBarTop")

@Html.Partial("_NavBarSide")


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">User Profile</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-8 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <i class="fas fa-user">&nbsp;</i>@User.Identity.Name
                    </div>


                    <div class="panel-body">

                        <dl class="dl-horizontal">
                            <dt>Password:</dt>
                            <dd>
                                [
                                @if (Model.HasPassword)
                                {
                                    @Html.ActionLink("Change your password", "ChangePassword")
                                }
                                else
                                {
                                    @Html.ActionLink("Create", "SetPassword")
                                }
                                ]
                            </dd>
                            <dt> ScreenName:</dt>
                            <dd>
                                @User.Identity.GetScreenName()
                                [
                                @Html.ActionLink("Change your Screen Name", "Edit")
                                ]
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
