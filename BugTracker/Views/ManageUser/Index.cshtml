@model  List<UserListViewModel>

@{
    ViewBag.Title = "User List";
}

@Html.Partial("_NavBarTop")

<!-- /.navbar-top-links -->
@Html.Partial("_NavBarSide")


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Manage User</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        User List
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive" >
                            <table id ="user-table" class="table table-striped user-table">
                                <thead>
                                    <tr>
                                        <th class="name">
                                            Name
                                        </th>
                                        <th class="username">
                                            User Name
                                        </th>
                                        @foreach (var roleName in ViewBag.Roles)
                                        {
                                            <th class="role">@roleName</th>
                                        }
                                        <th class="edit"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="name">
                                                @Html.DisplayFor(m => item.ScreenName)
                                            </td>
                                            <td class="username col-lg-1">
                                                @Html.DisplayFor(m => item.UserName)
                                            </td>


                                            @foreach (var roleName in ViewBag.Roles)
                                            {
                                                <td class="role">
                                                    @foreach (var role in item.Roles)
                                                    {
                                                        if (role == roleName)
                                                        {
                                                            <i class="text-success fas fa-check"></i>
                                                        }

                                                    }
                                                </td>
                                            }

                                            <td class="edit">
                                                <a href=@Url.Action("ChangeUserRole", new { id = item.Id }) title="Edit Roles">
                                                    <i class="fas fa-user-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>


