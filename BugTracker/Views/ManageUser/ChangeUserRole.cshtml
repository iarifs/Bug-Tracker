@model  UserListViewModel
@{
    ViewBag.Title = "Edit Roles";
}

@Html.Partial("_NavBarTop")
@Html.Partial("_NavBarSide")


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">EDIT User</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-8 col-md-6">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <i class="fas fa-user"></i>
                        @Html.DisplayFor(m => m.ScreenName)
                        &emsp;&emsp;
                        <i class="fas fa-at"></i>
                        @Html.DisplayFor(m => m.UserName)
                    </div>
                    <div class="panel-body">
                        <h3>Assign user To</h3>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })

                            foreach (var role in ViewBag.AllRolesInApp)
                            {
                                <div>
                                    <input type="checkbox" name="Roles" id="@role" value="@role" @(Model.Roles.Any(p => p == role) ? "checked" : "") />
                                    <label for="@role">@role</label>
                                </div>

                            }

                            <hr />
                            <input type="submit" class="btn btn-primary" value="Change" />
                        }
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
